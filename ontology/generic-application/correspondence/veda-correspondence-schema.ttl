# ----------------------------------------------------------------------
v-s:IncomingLetter
  rdf:type owl:Class ;
  rdfs:subClassOf v-s:Letter ;
  rdfs:subClassOf v-s:Labeled ;
  v-s:labelPattern "{@.v-s:sender.v-s:correspondentOrganization.v-s:shortLabel} (№{@.v-s:hasLetterRegistrationRecordSender.v-s:registrationNumber}, {@.v-s:hasLetterRegistrationRecordSender.v-s:registrationDate}) -> {@.v-s:recipient.v-s:correspondentOrganization.v-s:shortLabel} (№{@.v-s:hasLetterRegistrationRecordRecipient.v-s:registrationNumber}, {@.v-s:hasLetterRegistrationRecordRecipient.v-s:registrationDate}) - {@.v-s:hasDocumentKind.v-s:shortLabel} - {@.v-s:description [0,100]}..." ;
  rdfs:label "Входящее письмо"@ru ;
  rdfs:label "Incoming letter"@en ;
.

# ----------------------------------------------------------------------
v-s:OutgoingLetter
  rdf:type owl:Class ;
  rdfs:subClassOf v-s:Letter ;
  rdfs:subClassOf v-s:Labeled ;
  v-s:labelPattern "{@.v-s:sender.v-s:correspondentOrganization.v-s:shortLabel} (№{@.v-s:hasLetterRegistrationRecordSender.v-s:registrationNumber}, {@.v-s:hasLetterRegistrationRecordSender.v-s:registrationDate}) -> {@.v-s:recipient.v-s:correspondentOrganization.v-s:shortLabel} (№{@.v-s:hasLetterRegistrationRecordRecipient.v-s:registrationNumber}, {@.v-s:hasLetterRegistrationRecordRecipient.v-s:registrationDate}) - {@.v-s:hasDocumentKind.v-s:shortLabel} - {@.v-s:description [0,100]}..." ;
  rdfs:label "Исходящее письмо"@ru ;
  rdfs:label "Outgoing letter"@en ;
.

# ----------------------------------------------------------------------
v-s:Delivery
  rdf:type owl:Class ;
  rdfs:subClassOf v-s:UserThing ;
  rdfs:subClassOf v-s:Temporal ;
  rdfs:subClassOf v-s:BackwardLink ;
  rdfs:subClassOf v-s:Deliverable2 ;
  rdfs:subClassOf v-s:Embedded ;
  rdfs:subClassOf v-s:UserSearchableDocument;
  rdfs:subClassOf v-s:Labeled ;
  v-s:labelPattern "{@.v-s:backwardTarget.v-s:sender.v-s:correspondentOrganization.v-s:shortLabel} (№{@.v-s:backwardTarget.v-s:hasLetterRegistrationRecordSender.v-s:registrationNumber}, {@.v-s:backwardTarget.v-s:hasLetterRegistrationRecordSender.v-s:registrationDate}) -> {@.v-s:backwardTarget.v-s:recipient.v-s:correspondentOrganization.v-s:shortLabel} (№{@.v-s:backwardTarget.v-s:hasLetterRegistrationRecordRecipient.v-s:registrationNumber}, {@.v-s:backwardTarget.v-s:hasLetterRegistrationRecordRecipient.v-s:registrationDate}) - {@.v-s:backwardTarget.v-s:hasDocumentKind.v-s:shortLabel} - {@.v-s:backwardTarget.v-s:description}" ;
  rdfs:label "Доставка"@ru ;
  rdfs:label "Delivery"@en ;
.

# ----------------------------------------------------------------------
v-s:RegistrationRecord
  rdf:type owl:Class ;
  rdfs:subClassOf v-s:UserThing ;
  rdfs:subClassOf v-s:Registered ;
  rdfs:label "Регистрационная запись"@ru ;
  rdfs:label "Registration record"@en ;
.

# ----------------------------------------------------------------------
v-s:LetterRegistrationRecordEnumerated
  rdf:type owl:Class ;
  rdfs:subClassOf v-s:Enumerated ;
  rdfs:label "Регистрационная запись письма автонумеруемая"@ru ;
  rdfs:label "Letter registration record enumerated"@en ;
.

# ----------------------------------------------------------------------
v-s:LetterRegistrationRecordSender
  rdf:type owl:Class ;
  rdfs:subClassOf v-s:Embedded ;
  rdfs:subClassOf v-s:RegistrationRecord ;
  rdfs:label "Регистрационная запись отправителя письма"@ru ;
  rdfs:label "Letter registration record sender"@en ;
  v-s:hasNumeration v-s:RegistrationNumberSimpleNumerationYear ;
.

# ----------------------------------------------------------------------
v-s:LetterRegistrationRecordRecipient
  rdf:type owl:Class ;
  rdfs:subClassOf v-s:Embedded ;
  rdfs:subClassOf v-s:RegistrationRecord ;
  rdfs:label "Регистрационная запись получателя письма"@ru ;
  rdfs:label "Letter registration record recipient"@en ;
  v-s:hasNumeration v-s:RegistrationNumberSimpleNumerationYear ;
.

