v-s:TS_PersonalAspect 
  rdf:type v-ui:TemplateSpecification;
  v-s:loadPriority "15"^^xsd:integer;
  v-ui:defaultTemplate v-s:PersonalAspectTemplate;
  v-ui:forClass v-s:PersonalAspect
